<Window x:Class="PaletteGUIJSON.AboutWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaletteGUIJSON"
        mc:Ignorable="d"
        Title="About" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <Label  Margin="0,-200,0,0" HorizontalAlignment="Center" Content="Made with love by Tidal" Height="35" FontSize="20" />
        <TextBlock x:Name="TextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Height="150" Width="250" FontSize="18" TextAlignment="Center" TextWrapping="Wrap" />
        <Button Margin="0,0,0,-200" HorizontalAlignment="Center" Content="GitHub" Height="35" Width="100" Click="GitButton_Click" />
    </Grid>
</Window>
